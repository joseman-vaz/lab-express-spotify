<div class="container">
  <div class="row">
    <div class="col-12">
      <a href="/" class="btn btn-primary m-3">Back home</a>
      <div class="row">
        {{#each albums}}
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <img
                src="{{this.images.0.url}}"
                class="card-img-top"
                alt="{{this.name}}"
              />
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.artists.0.name}}</p>
                <p class="card-text">View Tracks from {{this.name}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a
                      href="/tracks/{{this.id}}"
                      class="btn btn-sm btn-outline-secondary"
                    >View Tracks</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>